{
  "name": "spica-backend",
  "version": "1.5.1",
  "author": "Yue Chang",
  "scripts": {
    "lint:es": "eslint -c ./eslint.json src",
    "fix:es": "npm run lint:es -- --fix",
    "lint:format": "prettier --config ./prettierrc.json --list-different \"./**/*.ts\" --ignore-path .gitignore",
    "fix:format": "npm run lint:format -- --write",
    "lint": "run-p lint:*",
    "fix": "run-s fix:*",
    "clean": "del-cli dist lib -f",
    "compile": "tspc",
    "test": "jest -c jest.config.js",
    "test:coverage": "npm run test -- --coverage --verbose",
    "build:layer": "npm install --production && mkdir -p dist/nodejs && cp -R node_modules dist/nodejs",
    "build:lambda": "npm install && tspc",
    "pre:commit": "run-s lint test:coverage build",
    "pre:dev": "run-s fix test:coverage",
    "pre:deploy": "run-s clean build:*"
  },
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.1680.0",
    "axios": "^1.7.2",
    "bignumber.js": "^9.1.0",
    "date-fns": "^2.29.3",
    "inversify": "^6.0.1",
    "lodash": "^4.17.21",
    "pg": "^8.8.0",
    "pg-native": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.6.2",
    "typeorm": "^0.3.7",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.14.186",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.6.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.54.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "ts-patch": "^3.3.0",
    "typescript": "^5.8.3",
    "typescript-transform-paths": "^3.5.5"
  }
}
